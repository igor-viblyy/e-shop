.auth-block

  %h2 Sign In

  .col-md-12
    = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|

      =f.input :email, label: false, required: false, autofocus: true, placeholder: 'Email', input_html: { class: 'form-control' }

      =f.input :password, label: false, required: false, placeholder: 'Password', input_html: { class: 'form-control' }

      .checkbox
        =f.input :remember_me, as: :boolean if devise_mapping.rememberable?

      .form-group
        =f.button :submit, 'Sign in', class: "btn btn-lg, btn-success form-control"

      .form-group
        =render 'devise/shared/links'
